<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transitions_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnShowBottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showBottomText"
        android:text="Show Bottom Text" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hello world!"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSlide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="slide"
        android:text="Show Slide" />

    <Button
        android:id="@+id/btnExplode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="explode"
        android:text="Show Explode" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToScene2"
        android:text="Go?" />

</LinearLayout>
